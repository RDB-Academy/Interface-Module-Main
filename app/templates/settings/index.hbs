<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <span class="glyphicon glyphicon-th-list"></span> Profile
    </h4>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="profileUsername" class="col-sm-2 control-label">Username:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="profileUsername" placeholder="{Username}">
        </div>
      </div>
      <div class="form-group">
        <label for="profileEmail" class="col-sm-2 control-label">E-Mail:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="profileEmail" placeholder="{E-Mail}">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" style="padding-right:20px;">
          <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <span class="glyphicon glyphicon-th-list"></span> Reset Profile
    </h4>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="resetProfile" class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="resetProfile" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" style="padding-right:20px;">
          <button type="submit" class="btn btn-warning">Reset Profile</button>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <span class="glyphicon glyphicon-th-list"></span> Delete Profile
    </h4>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="deleteProfile" class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="deleteProfile" placeholder="">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" style="padding-right:20px;">
          <button type="submit" class="btn btn-danger">Delete Profile</button>
        </div>
      </div>
    </form>
  </div>
</div>
{{outlet}}
