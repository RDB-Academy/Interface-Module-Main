{{outlet}}
<div class="panel panel-default sign-up-form">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Sign Up</h3>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        <div class="signup-username-inputfield">
          {{input type="text" value=username class="form-control" placeholder="Username"}}
          {{#if usernameHasError}}
            <div class="error-indicator">
              <span class="glyphicon glyphicon-remove"></span>
            </div>
          {{/if}}
        </div>
        {{#if showUsernameIndicator}}
          <div class="statusbar {{if isUsernameValid "ok"}}"></div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="emailAddress">Email address</label>
        <div class="signup-emailAddress-inputfield">
          {{input type="email" value=emailAddress class="form-control" placeholder="Email"}}
          {{#if emailAddressHasError}}
            <div class="error-indicator">
              <span class="glyphicon glyphicon-remove"></span>
            </div>
          {{/if}}
        </div>
        {{#if showEmailAddressIndicator}}
          <div class="statusbar {{if isEmailAddressValid "ok"}}"></div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="passwordField">Password</label>
        {{input type="password" value=password class="form-control" placeholder="Password"}}
        <div class="statusbar-progress ">
          <div class="indicator status-{{passwordDifficulty}}"></div>
        </div>
      </div>
      <div class="clearfix"></div>
      <button type="submit" class="btn btn-default pull-right" style="width: 150px;" {{action "submit"}}>Sign Up</button>
    </form>
  </div>
</div>
