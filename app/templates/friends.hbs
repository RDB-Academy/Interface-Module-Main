{{outlet}}

<div class="container">
	<div class="row">
    <div class="col-sm-4 col-sm-push-8">
      <!-- Placeholder Searchbar! -->
      <form action="#" method="get">
        <div class="input-group">
          <input class="form-control" id="system-search" name="q" placeholder="Search User..." required>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </form>
      <br>
      <h1>Friend Requests</h1>
			{{#each model.a as |profile|}}
				{{#friend-request profile}}
					<div class="btn-group" role="group" align="right">
						<button class="button" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></button>
						<button class="button" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></button>
					</div>
			  {{/friend-request}}
			{{/each}}
    </div>

    <div class="col-sm-8 col-sm-pull-4">
      <h1>Friends</h1>
			{{#each model.b as |profile|}}
				{{#friend-profile profile}}
					<button class="button" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-remove"></i></button>
			  {{/friend-profile}}
			{{/each}}
    </div>
	</div>
</div>
