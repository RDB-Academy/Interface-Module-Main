{{outlet}}
<div class="container profile">
  <div class="row">
    <div class="col-sm-4 hidden-xs" style="height:100%">
      <img class="fb-image-profile thumbnail img-circle" src="img/alchemist_logo.jpg"/>
    </div>
    <div class="col-xs-8 col-sm-8"> <!-- max username: 14 -->
      <h1>{{model.profile.username}}<br class="visible-xs"><small> {current status} </small></h1><hr>
    </div>
    <div class="col-xs-4 visible-xs">
      <img align="right" class="fb-image-profile thumbnail img-circle" src="img/alchemist_logo.jpg"/>
    </div>
    <div class="col-xs-12 col-sm-4" id="table-col">
      <table class="table table-striped table-hover profile-stats">
        <tbody>
          <tr>
            <td>Last Login</td><td> {{model.profileStats.a}} </td>
          </tr>
          <tr>
            <td>Total Time Spend</td><td> {{model.profileStats.b}} </td>
          </tr>
          <tr>
            <td>Total Tasks Done</td><td> {{model.profileStats.c}} </td>
          </tr>
          <tr>
            <td>Task Points</td><td> {{model.profileStats.d}} </td>
          </tr>
          <tr>
            <td>Achievement Points</td><td> {{model.profileStats.e}} </td>
          </tr>
          <tr>
            <td>Most played Mode</td><td> {{model.profileStats.f}} </td>
          </tr>
          <tr>
            <td>Total Points</td><td> {{model.profileStats.g}} </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4 hidden-xs">
      {{!profile-chart}}
    </div>
    <div class="clearfix"/>
    <div class="col-xs-12 col-md-12">
      <div class="col-md-8 hidden-xs" id="recent_achievements_header">
        <h3>Recent Achievements</h3>
        <hr>
      </div>
    </div>
  </div>


  <div class="feature-list">
    <div class="visible-xs">
      <h3>Recent Achievements</h3>
      <hr>
    </div>
    <div class="well">
      <div class="row achievements">
        {{#each model.achievements as |achievement|}}
            <div class="col-sm-2 col-xs-3">
                {{!achievement-small achievement}}
            </div>
        {{/each}}
      </div>
    </div>

    <div class="panel panel-default hidden-xs">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-8 vertical-center">
            {{!profile-chart-bottom model.chartData}}
          </div><div class="col-md-4 vertical-center">
            {{!profile-carousel model.chartData}}
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /.Feature-List -->
</div>
