{{outlet}}
<div class="jumbotron deceptitron">
  <div class="container settings">
    <div class="page-header">
      <h1>Login</h1>
    </div>
  </div>
</div>
<div class="panel panel-default login-form {{isInvalid}}">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Login</h3>
  </div>
  <div class="panel-body">
    <form {{action "submit" on="submit"}}>
      <div class="form-group">
        <label for="emailAddress">Email address</label>
        {{input type="email" value=emailAddress class="form-control" placeholder="Email"}}
      </div>
      <div class="form-group">
        <label for="passwordField">Password</label>
        {{input type="password" value=password class="form-control" placeholder="Password"}}
      </div>
      <div class="clearfix"></div>
      <button type="submit" class="btn btn-success pull-right">Login</button>
    </form>
  </div>
</div>
