<div class="panel panel-default" style="width: 500px; margin: 0 auto;">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Login</h3>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="emailAddress">Email address</label>
        {{input type="email" value=emailAddress class="form-control" placeholder="Email"}}
      </div>
      <div class="form-group">
        <label for="passwordField">Password</label>
        {{input type="password" value=password class="form-control" placeholder="Password"}}
      </div>
      <div class="clearfix"></div>
      <button type="submit" class="btn btn-default pull-right" style="width: 150px;" {{action "login"}}>Submit</button>
    </form>
  </div>
</div>
